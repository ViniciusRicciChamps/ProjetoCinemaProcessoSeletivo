<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#63656C"
    tools:context=".DetalhesFilme">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="390dp"
        android:layout_height="338dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/poster_filme_Detalhes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nota_Filme_Detalhes"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/borda_arredondada"
        android:drawableLeft="@drawable/favourites"
        android:fontFamily="@font/staatliches"
        android:padding="2dp"
        android:text="7.5"
        android:textAlignment="center"
        android:textColor="#FF1744"
        android:textSize="20sp"
        app:emojiCompatEnabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <Button
        android:id="@+id/botao_Favoritar"
        android:layout_width="77dp"
        android:layout_height="54dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="37dp"
        app:icon="@drawable/ic_coracao"
        app:iconGravity="textTop"
        app:iconPadding="2dp"
        app:layout_constraintBottom_toTopOf="@+id/nome_filme_Detalhe"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button2"
        android:layout_width="77dp"
        android:layout_height="54dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        app:icon="@drawable/send"
        app:iconGravity="textTop"
        app:iconPadding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/nome_filme_Detalhe"
        android:layout_width="372dp"
        android:layout_height="73dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/borda_arredondada"
        android:fontFamily="@font/staatliches"
        android:paddingLeft="5dp"
        android:text="Sonic"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_lancamento_Detalhes" />

    <TextView
        android:id="@+id/resenha_Filme_Detalhes"
        android:layout_width="372dp"
        android:layout_height="185dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/borda_arredondada"
        android:fontFamily="@font/staatliches"
        android:paddingLeft="10dp"
        android:text="adfsadas"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_filme_Detalhe" />

    <TextView
        android:id="@+id/linguagem_Filme_Detalhes"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/borda_arredondada"
        android:fontFamily="@font/staatliches"
        android:padding="5dp"
        android:text="PT"
        android:textAlignment="center"
        android:textColor="#303F9F"
        app:layout_constraintEnd_toStartOf="@+id/botao_Favoritar"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <TextView
        android:id="@+id/data_lancamento_Detalhes"
        android:layout_width="174dp"
        android:layout_height="30dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="13dp"
        android:drawableLeft="@drawable/calendar"
        android:fontFamily="@font/staatliches"
        android:text="24/02/2022"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nota_Filme_Detalhes" />

</androidx.constraintlayout.widget.ConstraintLayout>