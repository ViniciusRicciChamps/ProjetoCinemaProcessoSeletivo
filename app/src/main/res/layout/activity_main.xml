<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="396dp"
        android:layout_height="269dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="-3dp"
        android:background="#00ED0F0F"
        android:elevation="2dp"
        android:foreground="@drawable/img"
        app:cardBackgroundColor="#00E40E0E"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/listRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listRecyclerView"
        android:layout_width="404dp"
        android:layout_height="443dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="242dp"
        android:layout_height="43dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="99dp"
        android:fontFamily="@font/fugaz_one"
        android:text="LanÃ§amentos"
        android:textAlignment="center"
        android:textColor="#FF1744"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/botaoFlutuantePrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:clickable="true"
        android:text="Menu"
        app:backgroundTint="#76FF03"
        app:icon="@android:drawable/ic_input_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/listRecyclerView"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botao_Flutuante_Pesquisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="14dp"
        android:clickable="true"
        app:backgroundTint="#76FF03"
        app:layout_constraintBottom_toTopOf="@+id/botaoFlutuantePrincipal"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_search"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botao_Flutuante_Favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:backgroundTint="#76FF03"
        app:layout_constraintBottom_toTopOf="@+id/botao_Flutuante_Pesquisa"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textViewFlutuantePesquisar"
        android:layout_width="57dp"
        android:layout_height="21dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/borda_arredondada"
        android:fontFamily="@font/staatliches"
        android:text="Pesquisar"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/botao_Flutuante_Pesquisa"
        app:layout_constraintEnd_toStartOf="@+id/botao_Flutuante_Pesquisa"
        app:layout_constraintTop_toTopOf="@+id/botao_Flutuante_Pesquisa" />

    <TextView
        android:id="@+id/textViewFlutuanteFavoritos"
        android:layout_width="59dp"
        android:layout_height="19dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/borda_arredondada"
        android:fontFamily="@font/staatliches"
        android:text="Favoritos"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/botao_Flutuante_Favoritos"
        app:layout_constraintEnd_toStartOf="@+id/botao_Flutuante_Favoritos"
        app:layout_constraintTop_toTopOf="@+id/botao_Flutuante_Favoritos" />

</androidx.constraintlayout.widget.ConstraintLayout>